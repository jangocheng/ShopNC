@model ShopNC.Entity.Mapping.UserInfo
@{
    ViewBag.Title = "用户登录";
  //  Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>管理员登录</title>
    <link href="~/Content/Admin/Login/login.css" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        //if (window != top){
        //    top.location.href = "/Admin/Login/Index";
        //}

            if (window.top.location.href != window.location.href){
                window.top.location = "/Admin/Login/Index";
              };

    </script>
</head>
<body>
    @using (Ajax.BeginForm("Login", "Login", new AjaxOptions() { HttpMethod = "post" }, new { id = "divLogin" }))
    {
        <div id="login">
            <div id="top">
                <div id="top_left"><img src="/Content/Admin/Login/login_03.gif" /></div>
                <div id="top_center"></div>
            </div>

            <div id="center">
                <div id="center_left"></div>
                <div id="center_middle">
                    <div id="user">
                        <span>用户名</span> @Html.TextBoxFor(p => p.UserName)
                    </div>
                    <div id="password">
                        <span>密&nbsp;码</span> @Html.PasswordFor(p => p.Password)
                    </div>
                    <div id="captcha">
                        <span>验证码</span> @Html.TextBox("captcha", null, new { style = "width:70px;" })
                        <img src="@Url.Action("Index", "Captcha", new { Area = "" })" alt="验证码" title="刷新验证码" style="vertical-align:middle;" onclick="this.src='@Url.Action("Index", "Captcha", new { Area = "" })?ts='+new Date()" />
                    </div>
                    <div id="btn"><input type="submit" value="登录" /><input type="button" value="清空" onclick="window.location.href='/Admin/Login/Index'" /></div>
                </div>
                <div id="center_right"></div>
            </div>
            <div id="down">
                <div id="down_left">
                    <div id="inf">
                        <span class="inf_text">版本信息</span>
                        <span class="copyright">ShopNC-管理系统 v1.0</span>
                    </div>
                </div>
                <div id="down_center"></div>
            </div>
        </div>
    }
</body>
</html>

